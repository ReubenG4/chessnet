<Window x:Class="chessnet.StartSplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ChessNet" Height="500" Width="700">
    <DockPanel  Height="400" Width="600" HorizontalAlignment="Center" VerticalAlignment="Center">

        <Button x:Name="StartButton" Click="StartButton_Click" ClickMode="Press" 
                DockPanel.Dock="Bottom" MaxWidth="100" MinWidth="100">Start Game</Button>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50">
            ChessNet
        </TextBlock>


    </DockPanel>

</Window>
